@model InzertniServer.Models.Listing

@{
    ViewBag.Title = "Create New Listing";
}

<h2>Create New Listing</h2>

@using (Html.BeginForm("AddListing", "Listing", FormMethod.Post, new {enctype = "multipart/form-data"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            <label class="control-label col-md-2">Listing Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ListingTitle, new { htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.ListingTitle, "", new {@class = "text-danger"})
            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-md-2">Price</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ListingPrice, new { htmlAttributes = new {@class = "form-control", data_val_number = "Invalid Input, Please Enter Numbers", placeholder= "Price is in €" } })

            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-md-2">Area</label>
            <div class="col-lg-12">
                @Html.EditorFor(model => model.Area, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Area, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-2">Category</label>
            <div class="col-sm-10">
                @Html.DropDownList("categoryId", new SelectList(ViewBag.Categories, "CategoryId", "CategoryName"), new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Listing Description</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ListingDescription, new { htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.ListingDescription, "", new {@class = "text-danger"})
            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label, col-md-2">Tags</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ListingTags, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.ListingTags,"", new {@class = "text-danger"})
            </div>
        </div>
        
        <div class="form-group">
            <label class="control-label col-sm-2">Upload Pictures</label>
            <div class="col-sm-10">
                <input type="file" name="pictures" accept="image/*" multiple max="5" min="1"/>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>

    </div>
        

}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
