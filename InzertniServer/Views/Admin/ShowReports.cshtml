@model IEnumerable<InzertniServer.Models.Report>

@{
    ViewBag.Title = "ShowReports";
}

<h2>Reports</h2>
<table class="table">
    <tr>
        <th>
            Cause of Report
        </th>
        <th>User</th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var report in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => report.Cause)
            </td>
            <td>
                @Html.ActionLink(report.User.Login, "UserDetail", "User", new { id = report.User.UserId }, null)
            </td>
            <td>
                @Html.ActionLink("DeleteUser", "DeleteUserAdmin", new {id = report.User.UserId}, new {onclick = "Are You Sure About That ?"})
            </td>
            <td>
                @Html.ActionLink("DeleteReport", "DeleteReport", new { id = report.ReportId })
            </td>
        </tr>
    }

</table>


